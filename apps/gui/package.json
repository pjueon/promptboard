{
  "name": "@promptboard/gui",
  "version": "0.1.0",
  "type": "module",
  "description": "Visual Context Buffer for AI Agents",
  "author": "Jueon Park",
  "main": "dist-electron/main/index.mjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build && npm run build:mcp && npm run verify",
    "build:mcp": "node scripts/build-mcp.js",
    "verify": "node scripts/verify-build.js",
    "mcp": "node dist/mcp-bridge.cjs",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx,.vue",
    "test": "vitest run && playwright test",
    "test:unit": "vitest run",
    "test:e2e": "playwright test"
  },
  "build": {
    "appId": "com.promptboard.app",
    "productName": "Promptboard",
    "electronVersion": "28.0.0",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "public/**/*",
      "build/icon.png",
      "build/icon.ico",
      "package.json"
    ],
    "asarUnpack": [
      "build/icon.png"
    ],
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ],
      "extraFiles": [
        {
          "from": "dist/mcp-bridge.cjs",
          "to": "mcp-bridge.cjs"
        },
        {
          "from": "dist/mcp-bridge.cjs.map",
          "to": "mcp-bridge.cjs.map"
        }
      ]
    },
    "mac": {
      "icon": "build/icon.png",
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "extraFiles": [
        {
          "from": "dist/mcp-bridge.cjs",
          "to": "mcp-bridge.cjs"
        },
        {
          "from": "dist/mcp-bridge.cjs.map",
          "to": "mcp-bridge.cjs.map"
        }
      ]
    },
    "linux": {
      "icon": "build/icon.png",
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ],
      "extraFiles": [
        {
          "from": "dist/mcp-bridge.cjs",
          "to": "mcp-bridge.cjs"
        },
        {
          "from": "dist/mcp-bridge.cjs.map",
          "to": "mcp-bridge.cjs.map"
        }
      ]
    }
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@types/fabric": "^5.3.10",
    "@types/ws": "^8.18.1",
    "fabric": "^5.5.2",
    "lucide-vue-next": "^0.294.0",
    "pinia": "^2.3.1",
    "vue": "^3.4.0",
    "vue-i18n": "^9.14.5",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.22",
    "concurrently": "^8.2.2",
    "electron": "^29.4.6",
    "electron-builder": "^24.9.0",
    "esbuild": "^0.19.12",
    "jsdom": "^23.0.0",
    "playwright": "^1.40.0",
    "postcss": "^8.5.6",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-electron": "^0.28.4",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vitest": "^1.0.0",
    "wait-on": "^7.2.0"
  }
}
