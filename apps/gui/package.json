{
  "name": "promptboard",
  "version": "0.2.2",
  "type": "module",
  "description": "Visual Context Buffer MCP Server for AI Agents",
  "author": "Jueon Park",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/pjueon/promptboard.git"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "whiteboard",
    "visual-context",
    "ai-agent",
    "claude"
  ],
  "main": "dist-electron/main/index.mjs",
  "bin": {
    "promptboard": "./scripts/cli.mjs"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build && npm run build:mcp && npm run verify",
    "build:mcp": "node scripts/build-mcp.js",
    "verify": "node scripts/verify-build.js",
    "mcp": "node dist/mcp-bridge.cjs",
    "postinstall": "node scripts/download-binary.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx,.vue",
    "test": "vitest run && playwright test",
    "test:unit": "vitest run",
    "test:e2e": "playwright test"
  },
  "build": {
    "appId": "com.promptboard.app",
    "productName": "PromptBoard",
    "electronVersion": "28.0.0",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "public/**/*",
      "build/icon.png",
      "build/icon.ico",
      "package.json"
    ],
    "asarUnpack": [
      "build/icon.png"
    ],
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ],
      "extraFiles": [
        {
          "from": "dist/mcp-bridge.cjs",
          "to": "mcp-bridge.cjs"
        },
        {
          "from": "dist/mcp-bridge.cjs.map",
          "to": "mcp-bridge.cjs.map"
        }
      ]
    },
    "mac": {
      "icon": "build/icon.png",
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "extraFiles": [
        {
          "from": "dist/mcp-bridge.cjs",
          "to": "mcp-bridge.cjs"
        },
        {
          "from": "dist/mcp-bridge.cjs.map",
          "to": "mcp-bridge.cjs.map"
        }
      ]
    },
    "linux": {
      "icon": "build/icon.png",
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ],
      "extraFiles": [
        {
          "from": "dist/mcp-bridge.cjs",
          "to": "mcp-bridge.cjs"
        },
        {
          "from": "dist/mcp-bridge.cjs.map",
          "to": "mcp-bridge.cjs.map"
        }
      ]
    }
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "adm-zip": "^0.5.10",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/fabric": "^5.3.10",
    "@types/node": "^20.10.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vitest/coverage-v8": "^4.0.15",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.22",
    "concurrently": "^8.2.2",
    "electron": "^29.4.6",
    "electron-builder": "^24.9.0",
    "esbuild": "^0.19.12",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.26.0",
    "fabric": "^5.5.2",
    "jsdom": "^27.2.0",
    "lucide-vue-next": "^0.294.0",
    "pinia": "^2.3.1",
    "playwright": "^1.40.0",
    "postcss": "^8.5.6",
    "typescript": "^5.3.0",
    "vite": "^7.2.6",
    "vite-plugin-electron": "^0.28.4",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vitest": "^4.0.15",
    "vitest-canvas-mock": "^1.1.3",
    "vue": "^3.4.0",
    "vue-i18n": "^9.14.5",
    "wait-on": "^7.2.0"
  },
  "files": [
    "dist/mcp-bridge.cjs",
    "dist/mcp-bridge.cjs.map",
    "scripts/download-binary.js",
    "scripts/cli.mjs",
    "binaries/.gitkeep"
  ]
}
